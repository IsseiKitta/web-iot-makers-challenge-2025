datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id              String        @id @default(uuid())
  name            String        @unique
  password_hash   String    
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  devices         Devices[]
} 

model Devices { 
  id              String        @id @default(uuid())
  name            String        @unique
  temperature     Float         
  humidity        Float
  latitude        Float
  longitude       Float
  isOpen          Boolean       
  userId          Int           @relation(fields: [userId], references: [id]) // 外部キー指定
  user            Users
  createdAt       DateTime      @default(now())
}